{
  "name": "cat-energy",
  "version": "15.0.0",
  "private": true,
  "description": "Личный проект «Кэт энерджи» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-less": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-posthtml": "^3.0.5",
    "gulp-rename": "^2.0.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-webp": "^4.0.0",
    "posthtml-include": "^1.7.4",
    "stylelint": "^14.8.5",
    "stylelint-config-htmlacademy": "^0.1.12"
  },
"overrides":{
	"semver-regex": "3.1.4",
	"trim-newlines": "3.0.1",
    "deep-extend": "0.5.1",
    "glob-parent": "5.1.2",
    "merge": "2.1.1",
    "nth-check": "2.0.1" 	
},
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "npm run build && gulp server"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "16.15.0"
  }
